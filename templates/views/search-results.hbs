<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>{{title}}</h1>
      <p>Here are the search results:</p>
    </header>

    <ul>
      {{#if movies}}
        {{#each movies}}
          <li><a href="/similar/{{this.id}}">{{this.title}}</a></li>
        {{/each}}
      {{else}}
        <p>No movies found.</p>
      {{/if}}
    </ul>

    <footer>
      <p>{{name}} &copy; 2024</p>
    </footer>
  </body>
</html>