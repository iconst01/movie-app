<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>{{title}}</h1>
      <p>Movies similar to the one you selected:</p>
    </header>

    <ul>
      {{#if similarMovies}}
        {{#each similarMovies}}
          <li>{{this.title}}</li>
        {{/each}}
      {{else}}
        <p>No similar movies found.</p>
      {{/if}}
    </ul>

    <footer>
      <p>{{name}} &copy; 2024</p>
    </footer>
  </body>
</html>